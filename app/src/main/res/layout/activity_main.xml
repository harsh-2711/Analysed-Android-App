<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background=" #2e3264"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#f5f2d0"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Who are you?"
        android:textSize="15sp"
        android:textColor="#8d8ba4"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cool"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Student"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Harry Potter"
            android:textColor="#fff"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/person_1"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_weight="1"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/person_2"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_weight="1"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:src="@drawable/person_3"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_weight="1"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="15dp"
            android:id="@+id/alreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="Already have an account?"
            android:textSize="18sp"
            android:textColor="#fff"
            android:paddingRight="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#FF8C00"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:paddingLeft="220dp"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:textAllCaps="true"
            android:background="@drawable/signup_button_background"
            android:textColor="#fff"
            android:layout_above="@id/alreadyHaveAccount"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/userNameLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_extra_buttons_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/face"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Username"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailLayout"
            android:layout_below="@id/userNameLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_extra_buttons_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/email"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Email"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordLayout"
            android:layout_below="@id/emailLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_extra_buttons_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lock"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Password"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <!--
        <LinearLayout
            android:id="@+id/confirmPasswordLayout"
            android:layout_below="@id/passwordLayout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/signup_extra_buttons_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lock"
                android:padding="10dp"
