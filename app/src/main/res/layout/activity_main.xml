                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Confirm Password"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
-->
    </RelativeLayout>
</LinearLayout>